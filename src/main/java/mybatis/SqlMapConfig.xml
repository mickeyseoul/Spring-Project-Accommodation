<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>
	<!-- 별칭설정 --> <!-- alias : 가명 -->
	<typeAliases>
		<typeAlias type="member.model.MemberBean" alias="MyMember"/>
		<typeAlias type="hotel.model.HotelBean" alias="MyHotel"/>
		<typeAlias type="hotel.model.RoomBean" alias="MyRoom"/>
	</typeAliases>
	
	<!-- DB sql문 처리하는 곳 -->
	<mappers>
		<mapper resource="mybatis/member.xml"/>
		<mapper resource="mybatis/hotel.xml"/>
	</mappers>

</configuration>